<%= form_for(@activity_track) do |f| %>
    <% if @activity_track.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@activity_track.errors.count, "error") %> prohibited this activity_track from being
                saved:</h2>

            <ul>
                <% @activity_track.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <table>
        <tr>
            <td class="field"><%= f.label :activity_id %></td>
            <td><%= f.collection_select :activity_id, @activities, :id, :name, prompt: 'Select Activity' %></td>
        </tr>

        <tr>
            <td class="field"><%= f.label :amount %></td>
            <td><%= f.text_field :amount %></td>
        </tr>

        <tr>
            <td class="field"><%= f.label :tracked_on %></td>

            <td id="tracked_on-box" class="input-group date">
                <%= f.text_field :tracked_on %>
                <span class="input-group-addon">
                   <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </td>
        </tr>

        <tr>
            <td colspan="999" class="actions"><%= f.submit :class => 'btn btn-primary' %></td>
        </tr>
    </table>

<% end %>

<script type="text/javascript">
    $(function () {
        $('.date').datepicker({format: 'yyyy-MM-dd'});
    });
</script>
